{% extends 'shoping-cart.html.twig' %}
{% block yourcart %}
<!-- Cart -->
<div class="wrap-header-cart js-panel-cart">
    <div class="s-full js-hide-cart"></div>
    <div class="header-cart flex-col-l p-l-65 p-r-25">
        <div class="header-cart-title flex-w flex-sb-m p-b-8">
				<span class="mtext-103 cl2">
					Your Cart
				</span>

            <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
                <i class="zmdi zmdi-close"></i>
            </div>
        </div>
        <div class="header-cart-content flex-w js-pscroll">
            <ul class="header-cart-wrapitem w-full">
                {% if app.user %}
                {% if cart is not null %}
                {% if app.user.id == cart.idUser.id %}
                    {% for article in cart.idArticle %}
                        <li class="header-cart-item flex-w flex-t m-b-12">
                            <div class="header-cart-item-img">
                                <a href="{{ path('app_articles_quick_view',{'id':article.idArticle}) }}">
                                    <img src="{{vich_uploader_asset(article,'fileFile') }}" alt="IMG">
                                </a>
                            </div>

                            <div class="header-cart-item-txt p-t-8">
                                <a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                                    {{ article.titreArticle }}
                                </a>
                                <span class="header-cart-item-info">
								 {{ article.prixArticle }}TND
							</span>
                                  <span class="header-cart-item-info">
								{{ cart.quantite}} 
							</span> 
                            </div>
                        </li>
                    {% endfor %}

            </ul>

            <div class="w-full">
                <div class="header-cart-total w-full p-tb-40">
                    Total: {{ cart.total }}TND
                </div>

                <div class="header-cart-buttons flex-w w-full">
                    <a href="{{ path('app_articles_cart') }}" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
                        View Cart
                    </a>
                    <a href="{{ path('app_articles_pdfcart',{'id':cart.idPanier}) }}" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 ">
                        Confirm
                    </a>
                </div>
            </div>
            {% endif %}
            {% else %}
            <ul class="header-cart-wrapitem w-full">
                <li class="header-cart-item flex-w flex-t m-b-12">

                    <div class="header-cart-item-txt p-t-8">
                        <p>>Your cart is empty</p>
                    </div>
                </li>
            </ul>

            {% endif %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block cart %}
    <form class="bg0 p-t-75 p-b-85">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        {% block shoppingcart %}
                            <div class="wrap-table-shopping-cart">

                                <table class="table-shopping-cart">
                                    <tr class="table_head">
                                        <th class="column-1">Article</th>
                                        <th class="column-2">Title</th>
                                        <th class="column-3">Price</th>
                                        <th class="column-3">Actions</th>

                                    </tr>


                                    {% for article in cart.idArticle %}
                                    <tr class="table_row">
                                        <td class="column-1">
                                            <div class="how-itemcart1">
                                                <a href="{{ path('app_articles_quick_view',{'id':article.idArticle}) }}">
                                                    <img  src="{{vich_uploader_asset(article,'fileFile') }}" width="80" height="80" alt="IMG">
                                                </a>
                                            </div>
                                        </td>
                                        <td class="column-2">{{ article.titreArticle }}</td>
                                        
                                        <td class="column-3">{{ article.prixArticle }}TND</td>
                                    
                                       <td class="column-3"> <button class="btn btn-primary"  onclick="window.location.href='{{ path('app_panier_delete', {'idPanier': cart.idPanier}) }}'"> <i class="bi bi-plus"></i>Clear </button></td>

                                    </tr>
                                    {% endfor %}
                                    
                                </table>

                            </div>


                            <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                                <div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                                    Update Cart
                                </div>
                            </div>
                        {% endblock %}
                    </div>
                </div>
                {% block cartTotal %}
                    <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                        <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                            <h4 class="mtext-109 cl2 p-b-30">
                                Cart Totals
                            </h4>

                            <div class="flex-w flex-t p-t-27 p-b-33">
                                <div class="size-208">
								<span class="mtext-101 cl2">
									Total:
								</span>
                                </div>

                                <div class="size-209 p-t-1">
								<span class="mtext-110 cl2">
									{{ cart.total }}TND
								</span>
                                </div>
                            </div>

                           

                            <a href="{{ path('app_articles_pdfcart',{'id':cart.idPanier}) }}" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 ">
                                Confirm
                            </a>
                        </div>
                    </div>
                {% endblock %}
            </div>
        </div>
    </form>

{% endblock %}
